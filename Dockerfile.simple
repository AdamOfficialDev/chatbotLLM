# Simple Railway Dockerfile - Override system packages restriction
FROM node:18-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy and install Node.js dependencies
COPY package.json ./
RUN npm install --only=production

# Copy and install Python dependencies (override system restriction)
COPY backend/requirements.txt ./backend/
RUN pip3 install --break-system-packages --no-cache-dir -r backend/requirements.txt

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Create startup script
RUN echo '#!/bin/bash\n\
export PORT=${PORT:-3000}\n\
echo "Railway Simple Deployment - PORT: $PORT"\n\
python3 backend/server.py &\n\
sleep 8\n\
npm start -- --port $PORT --hostname 0.0.0.0\n\
' > start.sh && chmod +x start.sh

EXPOSE $PORT

CMD ["./start.sh"]